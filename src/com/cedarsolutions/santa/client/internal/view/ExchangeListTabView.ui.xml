<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:custom="urn:import:com.cedarsolutions.client.gwt.widget">

    <ui:style>
    .paragraph {
        width: 600px;
    }
    </ui:style>

    <g:ScrollPanel>
        <g:HTMLPanel>
            <p><g:Label styleName="{style.paragraph}" ui:field="paragraph1" /></p>
            <p><g:Button ui:field="createButton" /> <g:Button ui:field="deleteButton" /></p>
            <custom:DataTable ui:field="table" />
            <custom:DataTablePager ui:field="pager" />
        </g:HTMLPanel>
    </g:ScrollPanel>

</ui:UiBinder>
