<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:widget="urn:import:com.cedarsolutions.santa.client.common.widget">

    <ui:style>
    .header {
        margin-top: 0em;
        margin-left: 1em;
        margin-right: 2em;
    }

    .header h1 {
        padding-top: 20px;
    }

    .header img {
        float: left;
        margin-right: 20px;
    }

    .verbiage {
        margin-top: 1em;
        margin-left: 1em;
        margin-right: 2em;
    }

    .verbiage p {
        text-align: justify;
    }

    .content {
        width: 650px;
    }
    </ui:style>

    <g:VerticalPanel styleName="{style.content}">
        <g:HTMLPanel styleName="{style.header}">
            <g:HTMLPanel>
                <img src="images/gift-75x75.png"/>
                <h1><g:Label ui:field="header"/></h1>
            </g:HTMLPanel>
        </g:HTMLPanel>
        <g:HTMLPanel styleName="{style.verbiage}">
            <p><g:Label ui:field="paragraph1"/></p>
            <p><g:Label ui:field="paragraph2"/></p>
            <p><g:Button ui:field="loginButton"/></p>
        </g:HTMLPanel>
    </g:VerticalPanel>

</ui:UiBinder>
