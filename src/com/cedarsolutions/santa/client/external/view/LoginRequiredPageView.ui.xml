<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:widget="urn:import:com.cedarsolutions.santa.client.common.widget">

    <ui:style>
    .header {
        margin-top: 0em;
        margin-left: 1em;
        margin-right: 2em;
    }

    .header h1 {
        padding-top: 20px;
    }

    .header img {
        float: left;
        margin-right: 20px;
    }

    .verbiage {
        margin-top: 3em;
        margin-left: 1em;
        margin-right: 2em;
    }

    .verbiage p {
        text-align: justify;
    }

    .loginSelector {
        margin-top: 3em;
        margin-left: 1em;
        margin-right: 2em;
    }

    .content {
        width: 450px;
        float: left;
    }

    .login {
        width: 190px;
        float: left;
    }
    </ui:style>

    <g:FlowPanel>
        <g:FlowPanel styleName="{style.content}">
            <g:HTMLPanel styleName="{style.header}">
                <img src="images/gift-75x75.png"/>
                <h1><g:Label ui:field="header"/></h1>
            </g:HTMLPanel>
            <g:HTMLPanel styleName="{style.verbiage}">
                <p><g:Label ui:field="paragraph"/></p>
            </g:HTMLPanel>
        </g:FlowPanel>
        <g:FlowPanel styleName="{style.login}">
            <g:HTMLPanel styleName="{style.loginSelector}">
                <widget:LoginSelector ui:field="loginSelector" />
            </g:HTMLPanel>
        </g:FlowPanel>
    </g:FlowPanel>

</ui:UiBinder>
