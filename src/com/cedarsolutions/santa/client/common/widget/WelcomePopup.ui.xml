<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:widget="urn:import:com.cedarsolutions.client.gwt.widget">

    <ui:style>
    .panel {
        padding: 10px;
        text-align: justify;
    }

    .buttons {
        text-align: left;
    }
    </ui:style>

    <g:HTMLPanel styleName="{style.panel}" width="20em" ui:field="htmlPanel">
        <p><g:Label ui:field="paragraph1"/></p>
        <p><g:Label ui:field="paragraph2"/></p>
        <p><g:Label ui:field="paragraph3"/></p>
        <p class="{style.buttons}"><g:Button ui:field="closeButton" /></p>
    </g:HTMLPanel>

</ui:UiBinder>
