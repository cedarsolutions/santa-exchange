<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:widget="urn:import:com.cedarsolutions.santa.client.common.widget">
    <ui:style>
    .panel {
        width: 18em;
        border: 3px solid;
        font-family: sans-serif;
        padding-left: 1em;
        padding-bottom: 1em;
        background: #bfd9cc;
        -moz-border-radius: 10px;
        border-radius: 10px;
        margin-bottom: 1em;
    }

    .instructions {
        font-weight: bold;
    }
    </ui:style>

    <g:FlowPanel styleName="{style.panel}">
        <g:HTMLPanel ui:field="openIdSection">
            <p><g:Label styleName="{style.instructions}" ui:field="openIdInstructions"/></p>
            <widget:OpenIdProviderList ui:field="openIdList"/>
            <g:Button ui:field="openIdButton" />
            <g:DisclosurePanel stylePrimaryName="ss-DisclosurePanel" ui:field="openIdDisclosure">
                <g:header />
                <g:HTMLPanel>
                    <p><g:Label ui:field="openIdExplanation1"/></p>
                    <p><g:Label ui:field="openIdExplanation2"/></p>
                    <p><g:Label ui:field="openIdExplanation3"/></p>
                </g:HTMLPanel>
             </g:DisclosurePanel>
        </g:HTMLPanel>

        <g:HTMLPanel ui:field="continueSection">
            <g:Button ui:field="continueButton" />
            <g:DisclosurePanel stylePrimaryName="ss-DisclosurePanel" ui:field="continueDisclosure">
                <g:header />
                <g:Label ui:field="continueExplanation"/>
             </g:DisclosurePanel>
        </g:HTMLPanel>
    </g:FlowPanel>

</ui:UiBinder>
